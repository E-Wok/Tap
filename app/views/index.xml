<Alloy>
    <Window class="container">

        <View id="gameContainer">

            <View id="clockContainer">
                <Label id="clock">00:00</Label>
            </View>

            <View id="scoreContainer">
                <Label id="score">0</Label>
            </View>

            <View class="grid-container" id="grid"/>

            <View id="gameOver">
                <Label id="gameOverMessage">Game Over!</Label>
                <Button id="retry">Retry</Button>
            </View>
        </View>
    </Window>
</Alloy>
